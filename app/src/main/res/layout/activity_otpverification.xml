<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPVerification_Activity">

    <LinearLayout
        android:id="@+id/txtresend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="250dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP đã được gửi đến"/>

        <TextView
            android:id="@+id/otpPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#784FD3"
            android:textStyle="bold"
            android:text=" +84 979 677 552"
            android:contentDescription="Phone number receiving OTP"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Enter OTP:"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="90dp"
        android:layout_above="@+id/XacThuc_btn"
        android:layout_below="@+id/txtresend"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:id="@+id/otpET1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_formload"
            android:gravity="center"
            android:hint="OTP 1"
            android:maxLength="1"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/otpET2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_formload"
            android:gravity="center"
            android:hint="OTP 2"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/otpET3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_formload"
            android:gravity="center"
            android:hint="OTP 3"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/otpET4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_formload"
            android:gravity="center"
            android:hint="OTP 4"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/otpET5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_formload"
            android:gravity="center"
            android:hint="OTP 5"
            android:maxLength="1"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/otpET6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_formload"
            android:gravity="center"
            android:hint="OTP 6"
            android:maxLength="1"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/XacThuc_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/txtresend"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        android:backgroundTint="#EFBAF8"
        android:contentDescription="Validate OTP button"
        android:text="Xác thực"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/resen_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="Resend OTP button"
        android:gravity="center"
        android:text=" Gửi lại"
        android:textColor="#784FD3"
        android:textStyle="bold" />
</RelativeLayout>
